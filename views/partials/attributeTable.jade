div
    .col-lg-4.col-sm-6(ng-repeat='attrs in [core.attributes.physical, core.attributes.mental]')
        table.table.table-hover.attribute-table
            thead
                tr(ng-class='{ "hidden-xs": $index == 1 }')
                    th.attr
                    th.value {{text.ui.value}}
                    th.limits {{text.ui.limits}}
            tbody
                tr(ng-repeat='name in attrs')
                    th.attr(for='attribute-value-{{name}}')
                        label(for='attribute-value-{{name}}') {{text.attributes[name]}}
                    td.value
                        attribute-editor(id='attribute-value-{{name}}', char='char', modifier='modifier', attribute='{{name}}')
                    td.limits {{char.attributes[name].min.value}}/{{char.attributes[name].max.value}}
    .col-lg-4.col-sm-6
        table.table.table-hover.attribute-table
            thead
                tr.visible-lg
                    th.attr
                    th.value {{text.ui.value}}
                    th.limits {{text.ui.limits}}
            tbody
                tr(ng-repeat="name in ['mag','res']")
                    th.attr(for='attribute-value-{{name}}')
                        label(for='attribute-value-{{name}}') {{text.attributes[name]}}
                    td.value
                        attribute-editor(id='attribute-value-{{name}}', char='char', modifier='modifier', attribute='{{name}}')
                    td.limits {{char.attributes[name].max.value}}
                tr
                    th.attr {{text.attributes['ess']}}
                    td.value.text-center
                        attribute-editor(id='attribute-value-{{name}}', char='char', attribute='ess')
                    td.limits {{char.attributes['ess'].max.value}}
                tr
                    th.attr(for='attribute-value-edg')
                        label(for='attribute-value-edg') {{text.attributes.edg}}
                    td.value
                        attribute-editor(id='attribute-value-edg', char='char', modifier='modifier', attribute='edg')
                    td.limits {{char.attributes.edg.min.value}}/{{char.attributes.edg.max.value}}